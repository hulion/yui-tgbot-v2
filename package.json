{
  "name": "yui-tgbot-v2",
  "version": "2.0.0",
  "description": "服務型 Telegram Bot 與管理系統",
  "main": "src/bot/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc && node build.js",
    "deploy": "wrangler deploy",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "db:migrate": "wrangler d1 migrations apply yui-tgbot-db",
    "db:local": "wrangler d1 migrations apply yui-tgbot-db --local",
    "test": "vitest"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "grammy": "^1.21.1",
    "itty-router": "^4.0.29"
  },
  "devDependencies": {
    "esbuild": "^0.19.12",
    "playwright": "^1.55.0",
    "typescript": "^5.3.3",
    "vitest": "^2.0.5",
    "wrangler": "^3.78.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hulion/yui-tgbot-v2.git"
  },
  "keywords": [
    "telegram",
    "bot",
    "cloudflare",
    "workers"
  ],
  "author": "hulion",
  "license": "MIT"
}
